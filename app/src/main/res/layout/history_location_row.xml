<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/contain_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_ripple"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp">

            <com.vikram.locateme.views.MyTextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:id="@+id/txt_lbl_name" />

            <com.vikram.locateme.views.MyTextView
                android:text="---"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txt_lbl_name"
                android:layout_toEndOf="@+id/txt_lbl_name"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:id="@+id/txt_name" />

            <com.vikram.locateme.views.MyTextView
                android:text="Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_name"
                android:layout_alignLeft="@+id/txt_lbl_name"
                android:layout_alignStart="@+id/txt_lbl_name"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_lbl_contact" />

            <com.vikram.locateme.views.MyTextView
                android:text="---"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_lbl_contact"
                android:layout_toRightOf="@+id/txt_lbl_name"
                android:layout_toEndOf="@+id/txt_lbl_name"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:id="@+id/txt_contact" />

            <com.vikram.locateme.views.MyTextView
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_contact"
                android:layout_alignLeft="@+id/txt_lbl_contact"
                android:layout_alignStart="@+id/txt_lbl_contact"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_lbl_time" />

            <com.vikram.locateme.views.MyTextView
                android:text="---"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_lbl_time"
                android:layout_alignLeft="@+id/txt_contact"
                android:layout_alignStart="@+id/txt_contact"
                android:id="@+id/txt_time" />

            <com.vikram.locateme.views.MyTextView
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_time"
                android:layout_alignLeft="@+id/txt_lbl_time"
                android:layout_alignStart="@+id/txt_lbl_time"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_lbl_address" />

            <com.vikram.locateme.views.MyTextView
                android:text="---"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_lbl_address"
                android:layout_alignLeft="@+id/txt_time"
                android:layout_alignStart="@+id/txt_time"
                android:id="@+id/txt_address" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>